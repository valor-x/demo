pre[class*='language-']
  .token
    &.function,
    &.punctuation
     color $highlight-blue

  .token.comment,
  .token.prolog,
  .token.doctype,
  .token.cdata
    color $highlight-comment

  .token.namespace
    opacity: .7

  .token.operator,
  .token.boolean,
  .token.number
    color: $highlight-orange

  .token.property
    color: $highlight-yellow

  .token.tag
    color: $highlight-blue

  .token.string
    color: $highlight-green

  .token.selector
    color: $highlight-deletion

  .token.attr-name
    color: $highlight-orange

  .token.entity,
  .token.url,
  .language-css .token.string,
  .style .token.string
    color: $highlight-aqua

  .token.attr-value,
  .token.keyword,
  .token.control,
  .token.directive,
  .token.unit
    color: $highlight-yellow

  .token.statement,
  .token.regex,
  .token.atrule
    color: $highlight-aqua

  .token.placeholder,
  .token.variable
    color: $highlight-blue

  .token.deleted
    text-decoration: line-through

  .token.inserted
    border-bottom: 1px dotted #202746
    text-decoration: none

  .token.italic
    font-style: italic

  .token.important,
  .token.bold
    font-weight: bold

  .token.important
    color: $highlight-orange

  .token.entity
    cursor: help

  pre > code.highlight
    outline: .4em solid $highlight-orange
    outline-offset: .4em